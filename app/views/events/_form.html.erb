<script type="text/javascript">
    $(document).ready(function(){
        $('.input-group.date').datepicker({autoclose: true,
        container: '#date-container',
        format: 'yyyy-mm-dd'});
    });
</script>
<%= form_for @event, url: create_event_path(@board) do |f| %>

  <div class="input-group date" data-provide="datepicker">
    Date:<br>
    <%= f.text_field :event_date, class: 'form-control' %>
    <div id="date-container" class="input-group-addon"><i class="glyphicon glyphicon-th"></i></div>
  </div>
  Description: <br>
  <%= f.text_area :description, :cols => 30, :rows => 10 %> <br>
  <%= f.submit %>
<% end %>
